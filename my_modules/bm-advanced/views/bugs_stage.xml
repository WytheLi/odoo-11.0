        <record model="ir.ui.view" id="bug-manage.kanban">
            <field name="name">bug kanban</field>
            <field name="model">bm.bug.stage</field>
            <field name="type">kanban</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name">bug-kanban</field>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card">
